#!/usr/sbin/nft -f

# Permit SSH from client to server
# Permit SSH from server to client

flush ruleset

table netdev base-table {
        chain base-chain {
                type filter hook ingress device "eth0" priority -500; policy drop;
                ip saddr 68.96.0.0/16 ip daddr 144.126.0.0/16 tcp dport 22 counter accept
        }
}
